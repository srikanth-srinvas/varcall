/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/varcall -profile test,<docker/singularity> --outdir <OUTDIR>
----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    // Test profile details
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    // Define paths relative to the base directory of the pipeline
    samplesheet               = './data/test_samplesheet.csv'       // Path to test samplesheet
    read1                     = './data/test_sample1_R1.fastq.gz'   // Test input read 1
    read2                     = './data/test_sample1_R2.fastq.gz'   // Test input read 2
    reference_genome          = './data/test_reference.fasta'       // Test reference genome

    // Output directory for test runs
    outdir                    = './results/test'

    // Additional parameters for testing
    skip_trimming             = false               // Include CUTADAPT in tests
    skip_qc                   = false               // Include FASTQC and MultiQC in tests
    variant_caller            = 'freebayes'         // Use FreeBayes for variant calling
    snpeff_database           = 'test_database'     // Placeholder for SnpEff database (adjust if needed)
}